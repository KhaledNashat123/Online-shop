<%- include('parts/header.ejs') %>
<%- include('parts/navbar.ejs') %>
<%- include('parts/footer.ejs') %>

<div class="container">
    <h2 class="mt-4">Your Orders</h2>
    
    <% if (success.length > 0) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <% if (error.length > 0) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (orders.length === 0) { %>
        <p class="alert alert-warning">You have no orders yet.</p>
    <% } else { %>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Items</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < orders.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= orders[i].name %></td>
                        <td><%= orders[i].price %> $</td>
                        <td>
                            <form method="POST" class="d-flex justify-content-center">
                                <input type="number" name="amount" class="form-control text-center w-50" value="<%= orders[i].amount %>" readonly>
                            </form>
                        </td>
                        <td><%= orders[i].price * orders[i].amount %> $</td>
                    </tr>
                <% } %>
            </tbody>            
        </table>
    <% } %>
</div>

<div class="text-center mt-4">
    <form method="POST" action="/orders/manage-orders">
        <button type="submit" class="btn btn-success">Approve All</button>
    </form>
    <form method="POST" action="/orders/deleteAll">
        <button type="submit" class="btn btn-danger mt-2">Delete All</button>
    </form>
</div>


