<%- include('parts/header.ejs')%>
<%- include('parts/navbar.ejs')%>
<%- include('parts/footer.ejs')%>

<% if(items.length === 0) { %>
    <div class="alert alert-danger text-center mt-4">
        <strong>No items in the cart</strong>
    </div>
<% } else { %>

<div class="container mt-4">
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < items.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= items[i].name %></td>
                    <td><%= items[i].price %> $</td>
                    <td>
                        <form method="POST" class="d-flex justify-content-center">
                            <input type="number" name="amount" class="form-control text-center w-50" value="<%= items[i].amount %>">
                    </td>
                    <td><%= items[i].price * items[i].amount %> $</td>
                    <td>
                        <input type="hidden" name="cartId" value="<%= items[i]._id %>">
                        <button type="submit" class="btn btn-success btn-sm me-2" formaction="/cart/save">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <button type="submit" class="btn btn-danger btn-sm" formaction="/cart/delete">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<% } %>
